	blastoise.aprenderMovimiento(refugio)
	
	mewtwo.aprenderMovimiento(ondaPsiquica)
	mewtwo.aprenderMovimiento(pazMental)
	
	ash.pokemon(charmander)
	
	//Visuals
	
	//mapa.dibujarMapa()
	game.addVisualIn(inicio, game.at(0,0))
	keyboard.enter().onPressDo { 
		game.clear()
		mapa.dibujarMapa()
	}
	
	game.start()
}