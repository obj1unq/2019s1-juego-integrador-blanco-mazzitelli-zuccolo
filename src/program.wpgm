	lucha.agregarDebilidad(volador)
	
	// Movimientos.
	charmander.aprenderMovimiento(ascuas)
	charmander.aprenderMovimiento(grunido)
	
	charmeleon.aprenderMovimiento(pirotecnia)
	charmeleon.aprenderMovimiento(cuchillada)
	
